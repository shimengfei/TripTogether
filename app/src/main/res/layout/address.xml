<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >
    <com.baidu.mapapi.map.MapView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/maptest">

    </com.baidu.mapapi.map.MapView>
    <RelativeLayout
        android:id="@+id/city_list"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <include layout="@layout/city_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/city_list"
        android:id="@+id/city_header"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <include layout="@layout/city_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/city_header"
        android:id="@+id/city_list_item"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <include layout="@layout/city_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>



</RelativeLayout>

